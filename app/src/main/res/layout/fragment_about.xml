<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jules.kugelspiel.fragments.FragmentAbout"
    android:background="#FFFFFF">

    <TextView
        android:text="Kugelspiel"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvKugelspiel"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:typeface="monospace"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:text="developed by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/tvFrom"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/tvKugelspiel"
        />

    <TextView
        android:text="Lutz Mahler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/tvLutz"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/tvFrom"
         />

    <TextView
        android:text="Julian Opdenplatz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/tvJulian"
        android:textAlignment="center"
        android:layout_below="@+id/tvLutz"
        />

    <TextView
        android:text="Anne-Kathrin StÃ¶ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/tvAnne"
        android:textAlignment="center"
        android:layout_below="@+id/tvJulian"
        />
</RelativeLayout>
